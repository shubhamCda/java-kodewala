package com.threading.java;

class Task {
	public void oddPrintMethod() {
		for (int i = 1; i <= 10; i++) {
			if (i % 2 != 0) {
				System.out.println("Odd: " + i);
			}
		}
	}

	public void evenPrinterMethod() {
		for (int i = 1; i <= 10; i++) {
			if (i % 2 == 0) {
				System.out.println("Even: " + i);
			}
		}
	}
}

class EvenThread extends Thread {
	Task task;
	public EvenThread(){
		super();
		this.task = task;
	}
	public void run() {
		task.evenPrinterMethod();
	}
}

class OddThread extends Thread{
	Task task;
	public OddThread(){
		super();
		this.task = task;
	}
	public void run() {
		task.oddPrintMethod();
	}
}

public class OddEvenThread {

	public static void main(String[] args) {
		EvenThread et = new EvenThread();
		OddThread ot = new OddThread();
		
		et.start();
		ot.start();
				
	}

}
